<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.funmofoapp.OrderTrackingActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:id="@+id/rl1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/layout_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_prev"
                android:id="@+id/iv_back2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Tracking"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_below="@id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        app:cardElevation="4sp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        
        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Your Order Id : 193739872900"
            android:textSize="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/border_color"
            android:layout_marginTop="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/linearLayout2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/pic1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Durex"
                    android:textSize="25dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs. 60"
                    android:textSize="20dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/blue"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Placed On : 6th July,2017"
                    android:textSize="16dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:textAppearance="@style/ThemeOverlay.AppCompat.Light"/>
            </LinearLayout>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:background="@color/border_color"
                android:layout_below="@id/linearLayout2"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:id="@+id/linearLayout3"
           android:layout_below="@id/linearLayout2"
           android:orientation="vertical"
           >

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:checked="false"
               android:text="Order Confirmed"
               android:textSize="18dp"
               android:paddingLeft="20dp"
               android:layout_marginTop="25dp"
               android:layout_marginLeft="20dp"
               android:textColor="@color/dialog_bg"
                android:theme="@style/MyRadioButton"/>

           <View
               android:layout_width="2dp"
               android:layout_height="20dp"
               android:background="@color/dialog_bg"
               android:layout_marginLeft="36dp"/>

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:checked="false"
               android:text="Dispatched"
               android:textSize="18dp"
               android:paddingLeft="20dp"
               android:textColor="@color/dialog_bg"
               android:layout_marginLeft="20dp"
               android:theme="@style/MyRadioButton"/>
           <View
               android:layout_width="2dp"
               android:layout_height="20dp"
               android:background="@color/dialog_bg"
               android:layout_marginLeft="36dp"/>

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:checked="false"
               android:layout_marginLeft="20dp"
               android:text="Delivered"
               android:textSize="18dp"
               android:paddingLeft="20dp"
               android:textColor="@color/dialog_bg"
               android:theme="@style/MyRadioButton"/>

       </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="370dp"
                android:text="Shipping via : xyz courier"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="420dp"
            android:id="@+id/tv_expected_time"
            android:text="Expected Delivery Time : 20 mins"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/red"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>


