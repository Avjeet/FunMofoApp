<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginBottom="3.5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardElevation="2sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/grey"
                    android:text="Placed On: 6 July,2017"
                    android:textSize="14dp"
                    android:id="@+id/tv_order_placed_date" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Order Id:193739872900"
                    android:textSize="14dp"
                    android:id="@+id/tv_order_id2"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/grey"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="14dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/border_color"
                android:layout_marginTop="5dp"
                android:layout_below="@id/rl3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl3"
                android:layout_marginTop="5dp"
                android:id="@+id/linearLayout3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/iv_product"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/pic1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Durex"
                        android:id="@+id/tv_product_name"
                        android:textSize="19dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rs. 60"
                        android:textSize="16dp"
                        android:id="@+id/tv_price"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/blue"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rl4"
                android:layout_below="@id/linearLayout3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expected Delivery Time : 20 mins"
                    android:textSize="16dp"
                    android:id="@+id/tv_expected_time2"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/red"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/border_color"
                android:layout_marginTop="8dp"
                android:layout_below="@id/rl4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRACE ORDER"
                android:textSize="13dp"
                android:gravity="right"
                android:id="@+id/tv_trace_order"
                android:layout_marginTop="14dp"
                android:layout_below="@id/rl4"
                android:drawableRight="@drawable/ic_next"
                android:layout_marginRight="2dp"
                android:textColor="@color/blue"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
