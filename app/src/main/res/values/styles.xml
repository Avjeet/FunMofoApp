<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#323386</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#5962ca</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="rounded_border">
        <item name="android:background">@drawable/rounded_border</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <!--<style name="DialogAnimation" >
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
    <style name="DialogUpDownAnim" parent="@android:style/Theme.Translucent.NoTitleBar">

        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>-->

    <style name="tvstyle">
        <item name="android:background">@drawable/textbox_boundary</item>
    </style>


    <style name="ibstyle">
        <item name="android:background">@drawable/circular</item>
        <item name="android:layout_weight">1</item>

    </style>





    <style name="FormTextInputLayou" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14dp</item>
        <!--<item name="colorAccent">@color/border_color</item>-->
    </style>

    <style name="FormTextInputLayoutSignIn" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/border_color</item>
        <item name="android:textColor">@color/border_color</item>
        <item name="android:textSize">14dp</item>
        <!--<item name="colorAccent">@color/border_color</item>-->
    </style>



    <style name="FormTextInputLayoutTheme" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textSize">18dp</item>
        <item name="colorAccent">@color/border_color</item>
        <item name="colorControlNormal">@color/border_color</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
