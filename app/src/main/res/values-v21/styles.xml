<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FormTextInputLayoutTheme" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textSize">18dp</item>
        <item name="colorAccent">@color/border_color</item>
        <item name="colorControlNormal">@color/border_color</item>
        <item name="android:colorControlActivated">@color/border_color</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#323386</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#5962ca</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="myswitch">
        <item name="android:colorControlActivated">@color/cyan</item>
    </style>

</resources>